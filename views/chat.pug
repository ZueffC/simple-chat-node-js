extends layout 
block head
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css')
  link(rel='stylesheet' href='/assets/css/styles.css')

block header
  include header

block main
  br
  .container
    .row
      form(action="/chat", method='post').form-1
        .col.s10
          input(type="text", name="data")
        .col.s2
          input(type="submit", class="btn") 

    div#doc
      <iframe src='/chat_view' width='100%' height='100%' frameborder='no' allowtransparency seamless></iframe>
    script.
      setInterval(function(){
        document.getElementById('doc').innerHTML = "<iframe src='/chat_view' width='100%' height='100%' frameborder='no' allowtransparency seamless></iframe>";
      }, 2000)

